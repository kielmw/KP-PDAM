<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.beranda.pasangbaru.PasangBaruActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_icon_app" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="PDAM Sidoarjo"
            android:textColor="@color/grey"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Delta Tirta"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/notification"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_full"
            android:backgroundTint="@android:color/holo_red_dark"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2">


            <TextView
                android:id="@+id/notificationCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="16dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/grey"
            android:contentDescription="@string/image"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Pasang Baru"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pasangBaru"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            tools:src="@drawable/pasang_baru" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="180dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Nama Pelanggan"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNamaPelanggan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:hint="Nama Pelanggan"
                android:inputType="textCapWords"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Jenis Kelamin"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/etJenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:backgroundTint="@color/blue_et"
                    android:elevation="10dp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:text="Jenis Kelamin"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:elevation="11dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_dropdown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/etJenisKelamin"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Tempat Lahir"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etTempatLahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_light"
                android:hint="Tempat Lahir"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Tanggal Lahir"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/etTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:elevation="10dp"
                android:paddingStart="10dp"
                android:text="Tanggal Lahir"
                android:gravity="center_vertical"
                android:fontFamily="@font/poppins_light"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Blok / Nomor / RT / RW"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etBlok"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:backgroundTint="@color/blue_et"
                    android:drawablePadding="10dp"
                    android:elevation="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_light"
                    android:inputType="textCapWords"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="  /   "
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/etNomor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:backgroundTint="@color/blue_et"
                    android:drawablePadding="10dp"
                    android:elevation="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_light"
                    android:inputType="textCapWords"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="  /   "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etRT"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:backgroundTint="@color/blue_et"
                    android:drawablePadding="10dp"
                    android:elevation="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_light"
                    android:inputType="textCapWords"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="  /   "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etRW"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:backgroundTint="@color/blue_et"
                    android:drawablePadding="10dp"
                    android:elevation="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_light"
                    android:inputType="textCapWords"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Kecamatan"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etKecamatan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_light"
                android:hint="Kecamatan"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Kelurahan"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etKelurahan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_light"
                android:hint="Kelurahan"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Perumahan"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPerumahan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_light"
                android:hint="Perumahan"
                android:textStyle="bold"
                android:inputType="textCapWords"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="No. Telp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNoTelp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:hint="No. Telp"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="No. HP"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etNoHP"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:hint="No. HP"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Status Rumah"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/etStatusRumah"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_rounded_edit_text"
                    android:backgroundTint="@color/blue_et"
                    android:elevation="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_light"
                    android:text="Permanen"
                    android:paddingStart="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:elevation="11dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_dropdown"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/etStatusRumah"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="KTP"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etKTP"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_light"
                android:hint="KTP"
                android:textStyle="bold"
                android:inputType="number"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="KK"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etKK"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_light"
                android:hint="KK"
                android:textStyle="bold"
                android:inputType="number"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Catatan"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etCatatan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:hint="Catatan"
                android:inputType="textCapWords"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Jumlah Penghuni"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etJumlahPenghuni"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_light"
                android:hint="Jumlah Penghuni"
                android:inputType="number"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Sumber Air Lain"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etSumberAirLain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/blue_et"
                android:drawablePadding="10dp"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_light"
                android:hint="Sumber Air Lain"
                android:inputType="text"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:id="@+id/progressBar" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_rounded_edit_text"
                android:backgroundTint="@color/primary"
                android:elevation="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Buat Pengajuan"
                android:layout_marginBottom="50dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
